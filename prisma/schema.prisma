// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id              Int             @id @map("_id")
    wallet          String          @unique
    questionsSolved QuestionsList[]
}

model QuestionsList {
    id       Int    @id @map("_id")
    tag      String
    title    String
    question String
    answer   String
    User     User?  @relation(fields: [userId], references: [id])
    userId   Int?
}
